@{
}
<div class="container">
    <h1 class="p-4 text-center">Descripción del trabajo</h1>
    <table class="table">
        <thead>
            <tr>
                <th class="text-center">Nombre del trabajo</th>
                <th class="text-center">Requerimientos</th>
                <th class="text-center">Beneficio</th>
                <th class="text-center">Responsabilidades</th>
                <th class="text-center">Comentarios</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Trabajos)
            {
                <tr>
                    <td class="text-center">@item.Nombre</td>
                    <td class="text-center">@item.Requerimientos</td>
                    <td class="text-center">@item.Beneficio</td>
                    <td class="text-center">@item.Responsabilidades</td>
                    <td class="text-center">@item.Comentarios</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="container p-3">
    <table class="table table-fixed mx-auto">
        <thead>
            <tr>
                <th class="text-center col-4">Nombre de Empresa</th>
                <th class="text-center col-4">Comentario</th>
                <th class="text-center col-4">Valoración</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Empresas)
            {
                <tr>
                    <td class="text-center col-4">@item.Nombre</td>
                    <td class="text-center col-4">@item.Comentario</td>
                    <td class="text-center col-4">@item.Valoracion</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="empresa"><h5>Nombre de la empresa:</h5></label>
                    @Html.DropDownList("", ViewData[""] as SelectList, "Seleccione un ...", new {@class="form-control"})
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="puntuacion"><h5>Puntuación:</h5></label>
                    @Html.DropDownList("", ViewData[""] as SelectList, "Seleccione un ...", new {@class="form-control"})
                </div>
            </div>
        </div>
        <h5 class="p-3">Comentarios:</h5>
        <div class="form-group">
            @Html.TextArea("", new { @class = "form-control", rows = "3" })
        </div>
        <div class="text-center">
            <button type="button" class="btn btn-secondary m-3">Agregar comentario</button>
        </div>
    </div>
</div>

