<div class="container">
    <div class="card-group my-5">
        <div class="card border-0 mx-3">
            <h1 class="card-img-top">USUARIOS</h1>
            <div class="card-body d-flex flex-column">
                <p class="mb-0 flex-grow-1"></p>
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title">perfil</h5>
                </div>
                <div>
                    <h6 class="text-secondary">"Nombre Usuario"</h6>
                </div>
            </div>
            <div class="card-footer bg-white">
                <div class="row">
                    <div class="col">
                        <div>
                            @Html.DropDownList("nombre", ViewData["nombreperfil"] as SelectList, "Seleccione un perfil...", new {@class="form-control" })
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card border-0 mx-3">
            <div class="card-body d-flex flex-column">
                <p class="mb-0 flex-grow-1"></p>
                <div class="d-flex justify-content-start align-items-center">
                    <h5 class="card-title me-3">Perfil:</h5>
                    <div>
                        

                        
                    </div>
                </div>
            </div>
            <div class="card-footer bg-white">
                <div class="row">
                    <div class="col-9">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <!--<img src="~/img/lupa.png" class="img-fluid imagen" alt="Imagen" />-->
                            </div>
                            @Html.DropDownList("titulotrabajo", ViewData["tipoTrabjo"] as SelectList, "Seleccione un trabajo...", new {@class="form-control" })
                           
                            
                        </div>
                    </div>
                    <div class="col-3">
                        <button class="btn btn-secondary float-end" style="background-color: white; border-color: black; color: black;" onclick="mostrarMensajeSolicitudEnviada()">Aplicar</button>

                    </div>
                </div>
            </div>
        </div>

        <div class="card border-0 mx-3">
            <div class="card-body d-flex flex-column align-items-center">
                <div class="d-flex justify-content-center align-items-center mb-3">
                    <form method="post" enctype="multipart/form-data">
                    <!-- Otras entradas del formulario -->
                        <div class="form-group">
                            <label for="Imagen">Imagen:</label>
                            <input type="file" name="Imagen" class="form-control-file" />
                        </div>
                       
                    </form>

                </div>
                <!--<button class="btn btn-secondary ms-3">Cargar Curriculum</button>-->
            </div>
            <div class=" bg-white">
                <div class="d-flex justify-content-center ">
                    <div class="btn-group">
                        <!--<button class="btn btn-secondary" style="background-color: white; border-color: black; color: black;">Solicitud</button>
                        <button class="btn btn-secondary ms-5" style="background-color: white; border-color: white;">
                            <img src="~/img/ojo.jpg" class="img-fluid" alt="Imagen" style="height: 30px;" />
                        </button>-->
                        <div id="mensajeSolicitud" class="alert alert-success" style="display: none;">
                            Solicitud enviada correctamente.
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<form asp-action="guardarDatos">
<div class="gris">
    <div class="container px-4 text-center">
        <div class="row gx-5">
            <div class="col">
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <h4 style="color: white;">Información Básica</h4>
                        </div>
                    </div>

                        <div class="row">
                            <div class="col">
                                <label for="nombre" style="color: white;">Nombre:</label>
                                @Html.TextBox("nombre", null, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label for="edad" style="color: white;">Edad:</label>
                                @Html.TextBox("edad", null, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="row my-3">
                            <div class="col">
                                <label for="genero" style="color: white;">Género:</label>
                                <div class="btn-group" role="group" aria-label="Género">
                                    @Html.DropDownList("genero", ViewData["gnero"] as SelectList, "Seleccione un genero...", new {@class="form-control" })
                                    
                                </div>
                                <button class="btn btn-secondary float-end" style="background-color: white; border-color: black; color: black;">Guardar</button>
                                
                            </div>
                        </div>
                   
                    <div class="row">
                        <div class="col">
                            <h4 style="color: white;">Información Personal</h4>
                            <table class="table table-bordered table-light">
                                <thead>
                                    <tr>
                                        <th>Empresa</th>
                                        <th>Trabajo</th>
                                        <th>Plaza</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var listado in (IEnumerable<dynamic>)ViewData["dataPerfilTrabajo"])
                                    {
                                        <tr>
                                            <td>@listado.nombreempresa</td>
                                            <td>@listado.titulotrabajo</td>
                                            <td>@listado.trabajo</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="p-3" style="color: white;">
                    <label for="empresa"><h4>Valoración:</h4></label>
                    <select id="valoracion" name="valoracion" class="form-control">
                        <option value="">Seleccione una valoración</option>
                        <option name="valoracion" value="1">1</option>
                        <option name="valoracion" value="2">2</option>
                        <option name="valoracion" value="3">3</option>
                        <option name="valoracion" value="4">4</option>
                        <option name="valoracion" value="5">5</option>
                    </select>
                </div>
                <div class="p-3" style="color: white;">
                    <label for="empresa"><h4>Valoración empresa:</h4></label>
                        <select id="valoracion_empresa" name="valoracion_empresa" class="form-control">
                        <option value="">Seleccione una valoración</option>
                            <option name="valoracion_empresa" value="Bueno">Bueno</option>
                            <option name="valoracion_empresa" value="Excelente">Excelente</option>
                            <option name="valoracion_empresa" value="Malo">Malo</option>
                        
                    </select>
                </div>
             </div>
             
                    
        </div>
    </div>
</div>    
 </form>
<script>
    function mostrarMensajeSolicitudEnviada() {
        var mensajeSolicitud = document.getElementById('mensajeSolicitud');
        mensajeSolicitud.style.display = 'block';
    }
</script>
